<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kyobo.koreait.mapper.MainMapper">
    <select id="get_all_books" resultType="com.kyobo.koreait.domain.vos.BookVO">
        SELECT * FROM `book_tbl`;
    </select>

    <insert id="insert_books_in_cart" parameterType="java.util.List">
        INSERT INTO `cart_tbl` (`userEmail`, `bookISBN`, `bookCount`) VALUES
        <foreach item="cartDTOS" collection="list" separator=",">
        (#{cartDTOS.email}, #{cartDTOS.bookISBN}, #{cartDTOS.bookCount})
        </foreach>
        ON DUPLICATED KEY UPDATE
        `bookCount` = `bookCount` + 1
    </insert>

    <insert id="insert_books_in_heart" parameterType="java.util.List">
        INSERT IGNORE INTO `heart_tbl` (`userEmail`, `bookISBN`) VALUES
        <foreach collection="list" item="heartDTOS" separator=",">
            (#{heartDTOS.userEmail}, #{heartDTOS.bookISBN})
        </foreach>
    </insert>
</mapper>
